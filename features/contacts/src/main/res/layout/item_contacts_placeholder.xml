<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

    <View
      android:id="@+id/contact_image"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      android:background="@drawable/around_image"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:id="@+id/contact_txt_nickname"
      android:layout_width="0dp"
      android:layout_height="16sp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:background="@color/secondary_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/contact_image"
      app:layout_constraintTop_toTopOf="parent" />

    <View
      android:id="@+id/contact_txt_name"
      android:layout_width="0dp"
      android:layout_height="16sp"
      android:layout_marginTop="8dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:background="@color/secondary_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/contact_image"
      app:layout_constraintTop_toBottomOf="@+id/contact_txt_nickname" />

</androidx.constraintlayout.widget.ConstraintLayout>