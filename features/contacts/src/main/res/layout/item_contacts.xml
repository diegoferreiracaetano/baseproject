<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/contact_img_user"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp"
      app:civ_border_color="#2B2C2F"
      app:civ_border_width="1dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

    <TextView
      android:id="@+id/contact_txt_nickname"
      style="@style/TextMedium"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textColor="@color/primary_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/contact_img_user"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="diegoferreiracaetano" />

    <TextView
      android:id="@+id/contact_txt_name"
      style="@style/TextSmall"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:textColor="@color/secondary_text"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/contact_img_user"
      app:layout_constraintTop_toBottomOf="@+id/contact_txt_nickname"
      tools:text="Diego Caetano" />

</androidx.constraintlayout.widget.ConstraintLayout>